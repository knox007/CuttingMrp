
@model CuttingMrpLib.ProcessOrder

@{
    ViewBag.Title = "Delete";
}

<div>
    <ol class="breadcrumb" style="padding:20px 15px;font-size:1.5em;">
        <li>
            @Html.ActionLink("ProcessOrders", "Index")
        </li>
        <li>
            <label style="color:#ff0000;">
                Delete
            </label>
            <label class="label label-danger">
                @Html.DisplayFor(model => model.orderNr)
            </label>
        </li>
    </ol>
    <hr />

    <div class="panel panel-danger">
        <div class="panel-heading">
            <div class="col-md-12" style="height:35px;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <div class="col-md-10">
                            <h4>
                                Are you sure you want to delete
                                <label class="label label-danger">
                                    @Html.DisplayFor(model => model.orderNr)
                                </label>
                                ?
                            </h4>
                        </div>
                        <div class="col-md-2">
                            <input type="submit" value="Delete" class="btn btn-danger" style="width:150px;" />
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <div class="col-md-4">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.orderNr)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.orderNr)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.partNr)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.partNr)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.actualQuantity)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.actualQuantity)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
