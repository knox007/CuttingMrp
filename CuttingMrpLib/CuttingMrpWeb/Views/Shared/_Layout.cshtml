<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CuttingMrp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/basic")
    @Scripts.Render("~/bundles/jquery-plug-in")
    @Scripts.Render("~/bundles/highcharts")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="z-index:2000;">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @*@Html.ActionLink("CuttingMrp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            <h3 style="color: #eeeeee;margin:10px 20px 10px 10px;">CuttingMrp</h3>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="nav-dashboard">@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
                <li class="nav-process-orders">@Html.ActionLink("ProcessOrder", "Index", "ProcessOrders")</li>
                <li class="nav-requirements">@Html.ActionLink("Requirement", "Index", "Requirements")</li>
                @*<li class="nav-mrp-round">@Html.ActionLink("MrpRound", "Index", "MrpRounds")</li>*@
                <li class="nav-stocks">@Html.ActionLink("Stock", "Index", "Stocks")</li>
                <li class="nav-stock-movements">@Html.ActionLink("StockMovement", "Index", "StockMovements")</li>
                <li class="nav-mps">@Html.ActionLink("Mps", "Index", "Mps")</li>

                <li class="dropdown nav-basic-data">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        Basic Data <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="nav-part">
                            <a href="/Parts/Index">
                                <i class="fa fa-paragraph"></i>
                                &emsp;Part
                            </a>
                        </li>

                        <li class="nav-bom-item">
                            <a href="/BomItem/Index">
                                <i class="fa fa-paragraph"></i>
                                &emsp;Bom Item
                            </a>
                        </li>

                    </ul>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="body-content">
        @RenderBody()

        @*<footer style="position:absolute;bottom:10px;">
            <hr />
            <p>&copy; @DateTime.Now.Year -- All rights for IF</p>
        </footer>*@
    </div>
</body>
</html>
